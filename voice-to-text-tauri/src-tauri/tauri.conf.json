{
  "$schema": "https://schema.tauri.app/config/2",

  "productName": "voice-to-text-tauri",
  "version": "0.1.0",
  "identifier": "com.rampradhap.voice-to-text-tauri",

  "build": {
    "beforeDevCommand": "npm run build",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "Voice to Text",
        "width": 800,
        "height": 600,
        "resizable": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}